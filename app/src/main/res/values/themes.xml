<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthPacMan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/premium_gold</item>
        <item name="colorPrimaryVariant">@color/premium_dark_gold</item>
        <item name="colorOnPrimary">@color/premium_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/premium_accent</item>
        <item name="colorSecondaryVariant">@color/premium_dark_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/premium_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/premium_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/premium_gold</item>
    </style>
</resources>