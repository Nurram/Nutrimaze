<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_background">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isi_piringku_title"
        android:textColor="@color/premium_gold"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintBottom_toTopOf="@+id/playButton">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Intro -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_1"
                android:layout_marginBottom="24dp"
                android:background="@drawable/premium_control_background"
                android:padding="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_2"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_3"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_5"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_4"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_6"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_7"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_8"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_9"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_10"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/gambar_11"
                android:layout_marginBottom="20dp"
                android:background="@drawable/premium_control_background"
                android:padding="14dp" />

            <!-- Spacing at bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/scroll_untuk_melanjutkan"
        android:textSize="16sp"
        android:padding="16dp"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/premium_gold"
        android:textColor="@color/premium_background"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>