<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/premium_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/levelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kuis Level 1"
        android:textColor="@color/premium_gold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/questionProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pertanyaan 1 dari 2"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pertanyaan akan muncul di sini"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:lineSpacingMultiplier="1.3"
        android:gravity="center"
        android:minHeight="120dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/premium_control_background"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Pilihan A"
            android:textColor="@color/premium_background"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/premium_gold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Pilihan B"
            android:textColor="@color/premium_background"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/premium_gold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Pilihan C"
            android:textColor="@color/premium_background"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/premium_gold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Pilihan D"
            android:textColor="@color/premium_background"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/premium_gold" />

    </LinearLayout>

</LinearLayout>