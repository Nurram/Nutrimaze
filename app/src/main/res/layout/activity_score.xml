<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_background"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/game_selesai"
                android:textColor="@color/premium_gold"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/premium_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/finalScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/skor_akhir"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/levelReached"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/level_tercapai"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/gameRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⭐ Rating"
                        android:textColor="@color/premium_gold"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/premium_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statistik_konsumsi"
                        android:textColor="@color/premium_gold"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/riceConsumed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/makanan_pokok_dimakan"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/fishConsumed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lauk_pauk_dimakan"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/vegetableConsumed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sayur_dimakan"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/fruitConsumed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buah_dimakan"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/premium_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluasi"
                        android:textColor="@color/premium_gold"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/evaluationMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Evaluasi akan muncul di sini"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingMultiplier="1.3"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playAgainButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/main_lagi"
            android:textSize="16sp"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/premium_gold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToMenuButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/kembali_ke_menu"
            android:textColor="@color/premium_gold"
            android:textSize="16sp"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/premium_gold"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>