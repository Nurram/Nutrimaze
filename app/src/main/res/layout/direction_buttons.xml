<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="12dp"
    android:background="@drawable/premium_control_background">

    <!-- Tombol Atas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonUp"
        style="@style/DirectionButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:icon="@drawable/ic_arrow_up"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonLeft"
        app:layout_constraintEnd_toEndOf="@+id/buttonRight" />

    <!-- Row untuk tombol kiri dan kanan -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLeft"
        style="@style/DirectionButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_arrow_left"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonUp"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRight"
        style="@style/DirectionButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:icon="@drawable/ic_arrow_right"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonUp"
        app:layout_constraintStart_toEndOf="@+id/buttonLeft" />

    <!-- Tombol Bawah -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDown"
        style="@style/DirectionButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:icon="@drawable/ic_arrow_down"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeft"
        app:layout_constraintStart_toStartOf="@+id/buttonLeft"
        app:layout_constraintEnd_toEndOf="@+id/buttonRight"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>